<?xml version="1.0" encoding="utf-8"?>
<br.com.caco.util.NotifyingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/goku"/>


            <ImageView
            android:id="@+id/StoreProfileImageProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mr_kistch"
            android:contentDescription="desc"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="7dp"
            android:padding="3dp"
            android:background="@drawable/image_border"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/textViewStoreProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="168dp"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/StoreProfileImageProfile"
                android:paddingBottom="3dp"
                android:text="Mr Kitsch"
                android:verticalScrollbarPosition="left"/>

            <TextView
                android:id="@+id/textViewStoreProfileAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="198dp"
                android:textColor="#E8E8E8"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/StoreProfileImageProfile"
                android:paddingBottom="3dp"
                android:text="Avenida John Boyd Dunlop, 440, Jardim Ipaussurama, Campinas, SP"
                android:verticalScrollbarPosition="left"/>


        </RelativeLayout>
        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >



            <ImageView
                android:id="@+id/imageViewStatus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="Caco Logo"
                android:src="@drawable/caco_logo" />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Recompensas"
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/listViewSales"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Como funciona"
                android:id="@+id/textViewComoFunciona"
                android:layout_gravity="center_horizontal"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/listViewSalesParameter"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>



    </LinearLayout>



</br.com.caco.util.NotifyingScrollView>